@model CandidateTracker.Models.CountryViewModel
@{
    ViewBag.Title = "Index";
    var buttontext = "Create";
    if (Model.FormAction.ToString().Equals("Edit"))
    {
        buttontext = "Update";
    }
}

@using (Html.BeginForm(Model.FormAction.ToString(),"Country"))
{
    <div>
        <div>
            @Html.ValidationSummary(true, null, new { @class = "message-error color:red" })
        </div>
        @Html.LabelFor(x=>x.CountryName)
        @Html.TextBoxFor(x => x.CountryName)
        @Html.ValidationMessageFor(x => x.CountryName)
        @if (Model != null)
        {
            @Html.HiddenFor(model => model.id, new { value = Model.id })
        }
        <br />
        
        <input type="submit" value="@buttontext" name="action" />
        <input type="submit" value="Cancel" name="action" />
    </div>
    
}
@Html.Action("List")
